  <!-- Workouts Section -->
  <div class="section">
    <h2><i class="fas fa-dumbbell"></i> Workouts</h2>
    <table>
      <thead>
        <tr>
          <th>User ID</th>
          <th>Date</th>
          <th>Exercises</th>
        </tr>
      </thead>
      <tbody>
        <% if (workouts.length === 0) { %>
          <tr><td colspan="3">No workout records found.</td></tr>
        <% } else { %>
          <% workouts.forEach(workout => { %>
            <tr>
              <td><%= workout.userId %></td>
              <td><%= workout.date %></td>
              <td>
                <ul>
                  <% workout.exercises.forEach(ex => { %>
                    <li><%= ex.name %> - <%= ex.sets %>x<%= ex.reps %> @ <%= ex.weight %>kg (Volume: <%= ex.volume %>)</li>
                  <% }) %>
                </ul>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>


